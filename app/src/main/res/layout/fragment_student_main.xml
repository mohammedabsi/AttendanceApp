<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentMainFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/stdtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"

        app:layout_constraintBottom_toTopOf="@+id/stdimageCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="student name" />

    <ImageView
        android:id="@+id/stdimageCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/stdmmainprg"
        android:layout_width="50dp"
        android:layout_height="50dp"
android:visibility="invisible"
        android:indeterminateTint="@color/purple_200"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/stdimageCode"
        app:layout_constraintStart_toStartOf="@+id/stdimageCode"
        app:layout_constraintTop_toBottomOf="@+id/stdimageCode" />
</androidx.constraintlayout.widget.ConstraintLayout>