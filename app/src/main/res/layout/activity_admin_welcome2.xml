<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminWelcomeActivity">

    <LinearLayout
        android:id="@+id/req_teachers_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:backgroundTint="@color/secondry_color"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Requests Page "
            android:layout_gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/req_excuses_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:backgroundTint="@color/secondry_color"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Excuses Page "
            android:layout_gravity="center"

            />

    </LinearLayout>

</LinearLayout>