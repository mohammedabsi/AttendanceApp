<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:id="@+id/reglinear"
    android:background="@color/secondry_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/purple_700"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register_btn"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </FrameLayout>


    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="@string/user_name_edt"-->
    <!--        android:layout_marginStart="15dp"-->
    <!--        android:layout_marginLeft="15dp"-->
    <!--        android:layout_marginTop="5dp"-->
    <!--        android:textColor="@color/black"-->
    <!--        />-->

    <EditText
        android:id="@+id/userNameEdt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input"
        android:hint="@string/user_name_edt"
        android:inputType="text"
        android:padding="10dp"

        android:textAlignment="viewStart" />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="15dp"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:text="@string/email_edt"-->
<!--        android:textColor="@color/black" />-->

    <EditText
        android:id="@+id/emailEdt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input"
        android:gravity="start"
        android:hint="@string/email_edt"

        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="viewStart" />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="15dp"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:text="@string/password_edt"-->
<!--        android:textColor="@color/black" />-->

    <EditText
        android:id="@+id/passwordreg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="5dp"
android:hint="@string/password_edt"
        android:background="@drawable/input"
        android:gravity="start"

        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="viewStart" />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="15dp"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:text="@string/confirm_password_edt"-->
<!--        android:textColor="@color/black" />-->

    <EditText
        android:id="@+id/confirmPasswordEdt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="10dp"
android:hint="@string/confirm_password_edt"
        android:background="@drawable/input"
        android:gravity="start"

        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="viewStart" />



    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="10dp"
android:hint="@string/phone"
        android:background="@drawable/input"
        android:gravity="start"

        android:inputType="phone"
        android:padding="10dp"
        android:textAlignment="viewStart" />
    <!-- Login Button -->



    <!-- Login Button -->


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/std_RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/student"
            android:textColor="@drawable/text_color_selector"
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/tch_RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/teacher"
            android:textColor="@drawable/text_color_selector"
            android:textSize="10sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/channelInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="2"
            android:hint="@string/channel_name"
            android:visibility="gone"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/channel_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input"
                android:gravity="start|center"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


    </RadioGroup>

    <EditText
        android:id="@+id/studid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/studentid"
        android:background="@drawable/input"
        android:gravity="start"
        android:visibility="invisible"
        android:inputType="phone"
        android:padding="10dp"
        android:textAlignment="viewStart" />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_margin="8dp"
        android:onClick="Register"
        android:text="@string/register_complete"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/registersdasdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"


            android:text="@string/login_text"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loginTxtbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:onClick="returnLogin"
            android:text="@string/login_btn"
            android:textColor="@color/main_color"
            android:textSize="16sp" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/reg_progressBar"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:indeterminateTint="@color/purple_200"
        android:visibility="invisible" />
</LinearLayout>